html 
    head 
        title = 'Pug Form' 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel = "icon" type = "image/png" href = "./partials/assets/box.png")

    
    body 
        
        include ./partials/nav

        div(class='m-5')
            
            h1='Cargar producto'
            hr
            
            form(class="border p-5 mb-5 bg-dark text-white" action="/productos" method="POST")
                
                div(class="mb-3")
                    label(class="form-label") Nombre del veh√≠culo:
                    input(type="text" class="form-control" aria-label="Titulo" name="title" required)
                
                div(class="mb-3")
                    label(class="form-label") Precio:
                    input(type="text" class="form-control" aria-label="Precio" name="price" required)
                
                div(class="mb-3")
                    label(class="form-label")  Imagen:
                    input(type="text" class="form-control" aria-label="Thumbnail" name="thumbnail" required)
                
                button(type="submit" class="btn btn-primary") Agregar producto