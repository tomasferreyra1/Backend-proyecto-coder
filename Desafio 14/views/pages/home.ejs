<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Ingreso de Productos</title>
    
    <!-- Links & Scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js" integrity="sha512-RNLkV3d+aLtfcpEyFG8jRbnWHxUqVZozacROI4J2F1sTaDqo1dPQYs01OMi1t1w9Y2FdbSCDSQ2ZVdAC8bzgAg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="../../public/css/estilos.css">
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
</head>

<body>

    <div class="alert alert-success p-4">
        <div class="w-50 float-left">
            <h2>Welcome <%=username%>
            </h2>
        </div>
        <div class="float-right">
            <button class="btn btn-warning" onclick="location.href='/logout'">
                <b>Unlog</b><br>
            </button>
        </div>
    </div>

    <div class="container mt-3">
        <div class="jumbutton">
            <h1>Enter Product</h1>
            <br>

            <form id="formAddProduct">
                <!-- Nombre del producto -->
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" name="title" required>
                </div>

                <!-- Precio del producto -->
                <div class="form-group">
                    <label for="price">Price</label>
                    <input id="price" class="form-control" type="number" step="0.01" name="price" required>
                </div>

                <!-- Url de la foto del producto -->
                <div class="form-group">
                    <label for="photo">Photo URL</label>
                    <input id="photo" class="form-control" type="url" name="thumbnail">
                </div>

                <!-- Botón de envío -->
                <button class="btn btn-success mt-3">Send</button>
            </form>
            <br>
            <div id="products"></div>
        </div>

        <div class="jumbutton">
            <h1>Message center (Compresión: <span id="compresion-info"></span>%)</h1>
            <br>

            <input type="text" id="username" class="form-control w-50 my-2 mr-2" placeholder="Enter your email">
            <input type="text" id="firstname" class="form-control w-50 my-2 mr-2" placeholder="Enter your name">
            <input type="text" id="lastname" class="form-control w-50 my-2 mr-2" placeholder="Enter your last name">
            <input type="text" id="age" class="form-control w-50 my-2 mr-2" placeholder="Enter your age">
            <input type="text" id="alias" class="form-control w-50 my-2 mr-2" placeholder="Enter your alias">
            <input type="text" id="avatar" class="form-control w-50 my-2 mr-2" placeholder="Enter your avatar (url)">
            <hr>

            <hr>

            <div id="messages"></div>

            <form id="formPostMessage" class="form-inline" autocomplete="off">
                <div class="form-group">
                    <input disabled id="inputMessage" type="text" class="form-control my-2 mr-2"
                        placeholder="Enter a message...">
                    <button disabled id="btnSend" type="submit" class="btn btn-primary my-2">Send!</button>
                </div>
            </form>
        </div>
    </div>

    <script src="js/main.js"></script>

</body>

</html>